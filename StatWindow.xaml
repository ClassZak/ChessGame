<Window x:Class="ChessGame.StatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessGame"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Статистика" Height="180" Width="220" Icon="/chess_bishop_icon.png">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="WWonB" Text="Победы белых: "/>
            <TextBlock x:Name="BWonB" Text="Победы чёрных: "/>
            <TextBlock x:Name="DrawB" Text="Сыграно вничью: "/>
        </StackPanel>
    </Grid>
</Window>
